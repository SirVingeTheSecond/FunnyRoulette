<Window x:Class="FunnyRouletteWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Funny Roulette" Height="800" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Canvas for drawing the roulette wheel and ball -->
        <Canvas x:Name="SimulationCanvas" Background="LightGray" Grid.Row="0">
        </Canvas>
        
        <!-- Button will be added programmatically -->
    </Grid>
</Window>